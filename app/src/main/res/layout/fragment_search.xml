<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_button_genres"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="genre"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/rounded_corner_button2"/>

        <Button
            android:id="@+id/search_button_location"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="location"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/rounded_corner_button2"/>

        <Button
            android:id="@+id/search_button_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="time"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/rounded_corner_button2"/>

        <Button
            android:id="@+id/search_button_find"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="find"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/rounded_corner_button3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/search_textview_genre"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="all genres"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="3dp"
            android:textColor="@color/colorWhite2"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="15sp"/>
        <TextView
            android:id="@+id/search_textview_location"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="all locations"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="3dp"
            android:textColor="@color/colorWhite2"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="15sp"/>
        <TextView
            android:id="@+id/search_textview_time"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="all times"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="3dp"
            android:textColor="@color/colorWhite2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text=""
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_margin="3dp"
            android:textColor="@color/colorWhite2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler_view_search"/>

    </LinearLayout>





</LinearLayout>