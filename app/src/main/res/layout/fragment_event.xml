<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_fragment_title"
                android:text="Dummy Text Event"
                android:textSize="23sp"
                android:textAlignment="center"
                android:layout_margin="5dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <VideoView
                        android:id="@+id/event_fragment_video"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="300dp" />
                </FrameLayout>
                <ImageView
                    android:id="@+id/event_fragment_play"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play_arrow"/>
                <ProgressBar
                    android:id="@+id/event_fragment_progress_circular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>


            <!--ImageView
                android:id="@+id/event_fragment_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                /-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_fragment_genre"
                android:text="Genre: Classical"
                android:textSize="15sp"
                android:layout_margin="5dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/event_fragment_message"
                android:text="My Bloody Valentine will be playing in Silver Spring."
                android:textSize="17sp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"/>

        </LinearLayout>




    </ScrollView>






</LinearLayout>